{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@presentation/*": ["presentation/*"],
      "@domain/*": ["domain/*"],
      "@data/*": ["data/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@main/*": ["main/*"],
      "@validation/*": ["validation/*"]
    },
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": []
}
